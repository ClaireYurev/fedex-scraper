{
  "manifest_version": 3,
  "name": "FedEx Invoice Scraper",
  "version": "1.0.0",
  "description": "Automates data extraction from FedEx Billing Online portal, generating Excel reports per invoice.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.fedex.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FedEx Invoice Scraper"
  },
  "content_scripts": [
    {
      "matches": ["https://www.fedex.com/online/billing/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
